{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts"
      ]
    },
    "rules": {
      "no-empty": false,
      "no-console": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "prefer-const": false,
      "await-promise": true,
      "curly": true,
      "no-bitwise": false,
      "member-ordering": false,
      "variable-name": false,
      "max-classes-per-file": false,
      "class-name": false
    }
  }
  